<Page x:Class="MyAttemptAtQueens.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyAttemptAtQueens"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">
    <Page.Background>
        <ImageBrush TileMode="None">
            <ImageBrush.ImageSource>
                <BitmapImage DecodePixelWidth="700" DecodePixelHeight="700" UriSource="bg.jpg"/>


            </ImageBrush.ImageSource>
        </ImageBrush>
    </Page.Background>
    <Grid>
        <Button x:Name="button" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Start Playing" Width="76" Click="button_Click" Margin="112,170,112,110"/>
        <Label x:Name="label" Content="Name :" HorizontalAlignment="Center" Margin="83,137,169,137" VerticalAlignment="Center"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" Margin="152,137,28,140" TextWrapping="Wrap" Text="Enter Name" VerticalAlignment="Center" Width="120" GotFocus="textBox_GotFocus"  LostFocus="textBox_LostFocus" />

    </Grid>
</Page>
